#include <iostream>
#include <cstdlib>
using namespace std;
// функция создаёт и заполняет двумерный массив 
int ** creat(int &n, int &m) //создание двумерного массива
{
    cout << "n = ";
    cin >> n; // ввод количества строк
    cout << "m = ";
    cin >> m; // ввод количества элементов в строке
    int **mas = new int *[n]; // выделение памяти для n количества строк
    for (int i = 0; i < n; ++i)
    mas[i] = new int [m]; // выделение памяти для m количества элементов для каждой строки
    
    for (int i = 0; i < n; ++i) // заполнение двумерного массива
    for (int j = 0; j < m; ++j)
    {
        cout << "mas[" << i << "][" << j << "] = ";
        cin >> mas[i][j];
    }
    return mas; // возвращение массива
}

void print (int **mas, int n, int m) // функция выводит двумерную матрицу на экран в виде таблицы
{
    for (int i = 0; i < n; i++, cout << endl)
    for (int j = 0; j < m; j++)
    cout << mas[i][j] << "\t";
}

void deleteMas(int **mas, int n) // функция освобождает память, выделенную под массив
{
    for (int i = 0;i<n; i++)
    delete [] mas[i];
    delete [] mas;
}
int main()
{
    int n, m, k;
    int **a = creat(n,m);
    print(a,n,m); // выводим первоначальный массив
    cout << "k = ";
    cin >> k; // вводим номер строки для удаления
    /* Если номер строки отрицательный или больше номера последнего элемента, то выводим сообщение об ошибке */
    if (k < 0 || k > n-1)
    cout << "error";
    else
    {
        // освобождаем память, выделенную для k-й строки массива
        delete [] a[k];
        for (int i = k; i < n-1; ++i)
        // переадресуем указатели, начиная с k-й строки 
        a[i] = a[i + 1];
        a[n - 1] = NULL; // указатель на n-1 строку обнуляем
        --n; // уменьшаем текущее количество строк 
        print(a, n, m); // выводим измененный массив
    }
    deleteMas(a, n); // освобождаем память
    return 0;
