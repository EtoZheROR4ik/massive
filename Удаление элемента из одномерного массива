#include <iostream>
#include <cstdlib>
using namespace std;
int main()
{
    int n;
    cout << "n = ";
    cin>>n; // ввод размерности массива
    int a = new int [n]; // создание массива
    for (int i = 0; i < n; i++) // заполнение массива
    {
        cout << "a[" << i << "] = ";
        cin >> a[i];
    }
    int k;
    cout << "k = ";
    cin >> k; // ввод номера удаляемого элемента(начиная с 0)

    if (k < 0 || k > n-1) // номер отрицательный или больше номера последнего элемента, то выводим сообщение об ошибке
    cout << "error";

    else // выполняем удаление элемента из массива
    {
        intb = new int [n-1]; //создание нового пустого массива

        for (int i = k; i < n-1; i++)
        a[i] = a[i + 1];

        for (int i = 0; i < n; i++) //заполнение нового массива
        b[i] = a[i];

        for (int i = 0; i < n-1; i++) //отображение массива
        cout << b[i] << "\t";
    }
    return 0;
